                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_aspect_ratio_black_36dp.png"/>
                <!-- Ligne 5 backgroundcolor #a5ebe9 bordercolor #a5ebe9-->
