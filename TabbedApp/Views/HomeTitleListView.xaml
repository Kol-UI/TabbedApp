                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_sticky_note_2_black_36dp.png"/>
                <Button Grid.Row="4" Grid.Column="2" Text="Agendas" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_fact_check_black_36dp.png"/> 
                <!-- Ligne 6 Titre 3 -->
                <Label Grid.Row="5" Grid.ColumnSpan="2" Text="Profile et Partage" HorizontalOptions="StartAndExpand" TextColor="#210f86" FontSize="18"/>
