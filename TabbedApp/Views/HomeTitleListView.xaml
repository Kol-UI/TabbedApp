                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_calendar_today_black_36dp.png"/>
                <Button Grid.Row="6" Grid.Column="2" Text="Partage" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="baseline_ios_share_black_36dp.png"/>
                <!--Ligne 8 Titre 4 -->
                <Label Grid.Row="7" Grid.ColumnSpan="2" Text="Historique" HorizontalOptions="StartAndExpand" TextColor="#210f86" FontSize="18"/>
                <!-- Ligne 9 -->
                <Button Grid.Row="8" Grid.Column="0" Text="Récents" FontSize="12"
                        TextColor="Darkslategray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_history_black_36dp.png"/>
                <Button Grid.Row="8" Grid.Column="1" Text="Journal" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_account_balance_wallet_black_36dp.png"/>
                <Button Grid.Row="8" Grid.Column="2" Text="Corbeille" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_delete_black_36dp.png"/>

                <!-- Ligne 10 Titre 4 -->
                <Label Grid.Row="9" Text="Autres" HorizontalOptions="StartAndExpand" TextColor="#210f86" FontSize="18"/>
                <!-- Ligne 11 -->
                <Button Grid.Row="10" Grid.Column="0" Text="Actualités" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_notifications_black_36dp.png"/>
                <Button Grid.Row="10" Grid.Column="1" Text="Alertes" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_info_black_36dp.png"/>
                <Button Grid.Row="10" Grid.Column="2" Text="Aide/FAQ" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_help_outline_black_36dp.png"/>
                <!-- Ligne 12 -->
                <Button Grid.Row="11" Grid.Column="0" Text="Options" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_settings_black_36dp.png"/>
                <Button Grid.Row="11" Grid.Column="1" Text="Boutique" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_shopping_cart_black_36dp.png"/>

