<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TabbedApp.Views.HomeTitleListView"
    Title="SCRIBZEE">


    <ContentPage.Content>
        <ScrollView  BackgroundColor="#5dcec7">
          <StackLayout>
            <Label Text="Menu principal" HorizontalOptions="Center" TextColor="#210f86" FontSize="26"/>

        <Grid RowSpacing="5" ColumnSpacing="5" Padding="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" x:Name="col1"/>
                <ColumnDefinition Width="*" x:Name="col2"/>
                <ColumnDefinition Width="*" x:Name="col3"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- Title 1 -->
                <RowDefinition Height="20" x:Name="row1"/>
                <RowDefinition Height="75" x:Name="row2"/>
                <!-- Title 2 -->
                <RowDefinition Height="20" x:Name="row3"/>
                <RowDefinition Height="75" x:Name="row4"/>
                <RowDefinition Height="75" x:Name="row5"/>
                <!-- Title 3 -->
                <RowDefinition Height="20" x:Name="row6"/>
                <RowDefinition Height="75" x:Name="row7"/>
                <!-- Title 4 -->
                <RowDefinition Height="20" x:Name="row8"/>
                <RowDefinition Height="75" x:Name="row9"/>
                <!-- Title 5 -->
                <RowDefinition Height="20" x:Name="row10"/>
                <RowDefinition Height="75" x:Name="row11"/>
                <RowDefinition Height="75" x:Name="row12"/>
                <RowDefinition Height="20" x:Name="row13"/>
            </Grid.RowDefinitions>
                <!-- Ligne 1 Titre 1 -->
                <Label Grid.Row="0" Text="Scan" HorizontalOptions="StartAndExpand" TextColor="#210f86" FontSize="18"/>
                <!-- Ligne 2 -->
                <Button Grid.Row="1" Grid.Column="0" Text="Scan" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_note_add_black_36dp.png"/>
                <Button Grid.Row="1" Grid.Column="1" Text="En cours" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_youtube_searched_for_black_36dp.png"/>
                <Button Grid.Row="1" Grid.Column="2" Text="Recherche" FontSize="12"
                        TextColor="DarkSlateGray" BackgroundColor="#a5ebe9" BorderWidth="1"
                        BorderColor="#a5ebe9" WidthRequest="125" HeightRequest="150"
                        ContentLayout="Top,0" HorizontalOptions="Start"
                        ImageSource="outline_search_black_36dp.png"/>
                <!-- Ligne 3 Titre 2 -->
                <Label Grid.Row="2" Text="Documents" HorizontalOptions="StartAndExpand" TextColor="#210f86" FontSize="18"/>
